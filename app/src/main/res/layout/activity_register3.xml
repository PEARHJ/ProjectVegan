<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Register3Activity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/hssaemaul_regular"
        android:text="채곡채곡 3/4"
        android:textAlignment="center"
        android:textColor="#1b1b1b"
        android:textSize="40dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="채식주의 유형을 선택해주세요."
        android:fontFamily="@font/pretendardregular"
        android:textAlignment="center"
        android:textColor="#1b1b1b"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <Button
        android:id="@+id/Btn_Register3To4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendardregular"
        android:text="다음 단계로"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintBottom_toTopOf="@+id/Btn_Register3To4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0">

        <RadioGroup
            android:id="@+id/Rg_veganType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp">


            <RadioButton
                android:id="@+id/Radio_Vegan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:fontFamily="@font/pretendardregular"
                android:gravity="center"
                android:text="비건"
                android:textColor="@drawable/selector_radio_text"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/Radio_Lacto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:fontFamily="@font/pretendardregular"
                android:gravity="center"
                android:text="락토"
                android:textColor="@drawable/selector_radio_text"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/Radio_Ovo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:fontFamily="@font/pretendardregular"
                android:gravity="center"
                android:text="오보"
                android:textColor="@drawable/selector_radio_text"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/Radio_LactoOvo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:fontFamily="@font/pretendardregular"
                android:gravity="center"
                android:text="락토오보"
                android:textColor="@drawable/selector_radio_text"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/Radio_Pollo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:gravity="center"
                android:text="폴로"
                android:textColor="@drawable/selector_radio_text" />

            <RadioButton
                android:id="@+id/Radio_Pesco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:fontFamily="@font/pretendardregular"
                android:gravity="center"
                android:text="페스코"
                android:textColor="@drawable/selector_radio_text"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/Radio_etc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:fontFamily="@font/pretendardregular"
                android:gravity="center"
                android:text="지향 없음"
                android:textColor="@drawable/selector_radio_text"
                android:textSize="16sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/Tv_SelectedVeganType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/Btn_Register3To4"
            android:layout_gravity="center"
            android:visibility="invisible" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>