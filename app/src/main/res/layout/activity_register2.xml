<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Register2Activity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/hssaemaul_regular"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="1sp"
        android:text="채곡채곡 2/4"
        android:textAlignment="center"
        android:textColor="#1b1b1b"
        android:textSize="40sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24sp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/pretendardregular"
        android:lineSpacingExtra="12sp"
        android:text="채식에 관심을 갖게 된 계기는 무엇인가요?"
        android:textAlignment="center"
        android:textColor="#1b1b1b"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <Button
        android:id="@+id/Btn_Register2To3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다음 단계로"
        android:fontFamily="@font/pretendardregular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/Btn_Register2To3"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <CheckBox
            android:id="@+id/Cb_Environment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/selector_radio_button"
            android:textColor="@drawable/selector_radio_text"
            android:gravity="center"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/pretendardregular"
            android:textSize="16sp"
            android:text="환경"/>
        <CheckBox
            android:id="@+id/Cb_Animal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/selector_radio_button"
            android:textColor="@drawable/selector_radio_text"
            android:gravity="center"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/pretendardregular"
            android:textSize="16sp"
            android:text="동물권"/>
        <CheckBox
            android:id="@+id/Cb_Health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/selector_radio_button"
            android:textColor="@drawable/selector_radio_text"
            android:gravity="center"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/pretendardregular"
            android:textSize="16sp"
            android:text="건강"/>
        <CheckBox
            android:id="@+id/Cb_Religion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/selector_radio_button"
            android:textColor="@drawable/selector_radio_text"
            android:gravity="center"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/pretendardregular"
            android:textSize="16sp"
            android:text="종교"/>
        <CheckBox
            android:id="@+id/Cb_Etc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/selector_radio_button"
            android:textColor="@drawable/selector_radio_text"
            android:gravity="center"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/pretendardregular"
            android:textSize="16sp"
            android:text="기타"/>

        <TextView
            android:id="@+id/Tv_SelectedVeganReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>